<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="UTTAF.Mobile.Home.MainView"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
	<ContentPage.Resources>
		<StyleSheet Source="style.css" />
	</ContentPage.Resources>

	<StackLayout>
		<Frame>
			<Label Text="Welcome to Xamarin.Forms!" />
		</Frame>
		<Label StyleClass="title" Text="Start developing now" />
		<Label StyleClass="description" Text="Make changes to your XAML file and save to see your UI update in the running app with XAML Hot Reload. Give it a try!!" />
		<StackLayout Orientation="Horizontal" StyleClass="support">
			<Label StyleClass="message" Text="Learn more at " />
			<Label StyleClass="link" Text="https://logikoz.net">
				<Label.GestureRecognizers>
					<TapGestureRecognizer Command="{Binding GoToWebSiteCommand}" CommandParameter="https://logikoz.net" />
				</Label.GestureRecognizers>
			</Label>
		</StackLayout>
	</StackLayout>
</ContentPage>