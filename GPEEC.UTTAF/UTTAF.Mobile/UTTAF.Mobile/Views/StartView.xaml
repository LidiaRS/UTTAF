<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="UTTAF.Mobile.Views.StartView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:button="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:icon="clr-namespace:UTTAF.Mobile.Util"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Visual="Material"
    mc:Ignorable="d">
    <Grid>
        <Image Aspect="AspectFill" Source="uttaf.png" />
        <Grid BackgroundColor="{StaticResource DarkBlue}" Opacity=".85" />
        <Grid VerticalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label
                Grid.Row="0"
                FontAttributes="Bold"
                FontSize="26"
                HorizontalTextAlignment="Center"
                Text="UTTAF"
                TextColor="White" />
            <Image
                Grid.Row="1"
                Margin="5"
                HorizontalOptions="CenterAndExpand"
                Source="uttaf_icon"
                WidthRequest="150" />
            <Label
                Grid.Row="2"
                FontSize="13"
                HorizontalTextAlignment="Center"
                Text="Utilizaçao de Tecnologia no Transito com Aplicaçao Física"
                TextColor="White" />

            <Label
                Grid.Row="3"
                Margin="15"
                FontSize="18"
                HorizontalTextAlignment="Center"
                Text="Eos sed duo takimata diam magna accusam diam sed at dolor ut amet est vero dolore voluptua nulla diam sit"
                TextColor="White" />

            <button:SfButton
                Grid.Row="4"
                BackgroundColor="{StaticResource DarkYellow}"
                Clicked="JoinSession"
                CornerRadius="20"
                HorizontalOptions="CenterAndExpand"
                WidthRequest="200">
                <Label Padding="7" HorizontalOptions="Center">
                    <Label.FormattedText>
                        <FormattedString>
                            <FormattedString.Spans>
                                <Span
                                    FontFamily="{StaticResource MaterialIcons}"
                                    FontSize="20"
                                    Text="&#xf0222;"
                                    TextColor="White" />
                                <Span Text="     " />
                                <Span
                                    FontSize="16"
                                    Text="INICIAR"
                                    TextColor="White" />
                            </FormattedString.Spans>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </button:SfButton>
        </Grid>
    </Grid>
</ContentPage>