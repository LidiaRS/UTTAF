<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="UTTAF.Mobile.Views.JoinSessionView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:icon="clr-namespace:UTTAF.Mobile.Util"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Visual="Material"
    mc:Ignorable="d">
    <Grid>
        <Image Aspect="AspectFill" Source="uttaf" />
        <Grid BackgroundColor="{StaticResource DarkBlue}" Opacity=".85" />
        <Grid VerticalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Entry
                Grid.Row="0"
                BackgroundColor="#3affffff"
                HorizontalOptions="Center"
                MaxLength="20"
                Placeholder="Referencial"
                PlaceholderColor="White"
                Text="{Binding SessionReference}"
                TextColor="White"
                WidthRequest="200" />

            <Entry
                Grid.Row="1"
                BackgroundColor="#3affffff"
                HorizontalOptions="Center"
                MaxLength="20"
                Placeholder="Nome"
                PlaceholderColor="White"
                Text="{Binding Attendee}"
                TextColor="White"
                WidthRequest="200" />

            <Label
                Grid.Row="2"
                Margin="20"
                FontSize="18"
                HorizontalTextAlignment="Center"
                Text="Eos sed duo takimata diam magna accusam diam sed at dolor ut amet est vero dolore voluptua nulla diam sit"
                TextColor="White" />

            <Button
                Grid.Row="3"
                BackgroundColor="{StaticResource DarkYellow}"
                Command="{Binding JoinAtSessionCommand}"
                CornerRadius="20"
                HorizontalOptions="CenterAndExpand"
                Text="Participar"
                TextColor="White"
                WidthRequest="200" />
            <Button
                Grid.Row="4"
                BackgroundColor="Transparent"
                BorderWidth="0"
                Command="{Binding JoinAtSessionWithQrCodeCommand}"
                Text="Encanear"
                TextColor="White" />

        </Grid>

        <Button
            Clicked="BackToStart"
            HorizontalOptions="Start"
            Style="{StaticResource ButtonIcon}"
            Text="{x:Static icon:PackIconUtil.ArrowLeft}"
            TextColor="White"
            VerticalOptions="Start" />
    </Grid>
</ContentPage>