<Window
    x:Class="UTTAF.Desktop.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UTTAF.Desktop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="MainView"
    Background="{DynamicResource MaterialDesignBackground}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <md:Card
            Margin="10"
            VerticalAlignment="Center"
            Background="{DynamicResource MaterialDesignCardBackground}">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                    Text="{Binding TitleCard, FallbackValue=Titulo Teste}" />
                <Image
                    Grid.Row="1"
                    Width="100"
                    Height="100"
                    Margin="10"
                    HorizontalAlignment="Center"
                    Source="https://avatars0.githubusercontent.com/u/37851168" />
                <TextBlock
                    Grid.Row="2"
                    HorizontalAlignment="Center"
                    Style="{StaticResource MaterialDesignTextBlock}"
                    Text="{Binding DescriptionIcident, FallbackValue=Acidente com vitima.}" />
                <TextBlock
                    Grid.Row="3"
                    HorizontalAlignment="Center"
                    Style="{StaticResource MaterialDesignBody2TextBlock}"
                    Text="{Binding IncidentDate, FallbackValue=14/03/2000}" />
            </Grid>
        </md:Card>

        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <md:Card
                Grid.Row="0"
                Margin="0,0,0,10"
                Background="{DynamicResource MaterialDesignCardBackground}" />
            <md:Card Grid.Row="1" Background="{DynamicResource MaterialDesignCardBackground}" />
        </Grid>

        <Button
            Grid.Column="1"
            Margin="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Background="{StaticResource PrimaryHueDarkBrush}"
            Click="Button_Click"
            Content="{md:PackIcon Kind=Settings}"
            Foreground="White"
            Style="{StaticResource MaterialDesignIconButton}" />
    </Grid>
</Window>
